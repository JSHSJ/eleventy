{
  "name": "blx-eleventy",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-img": "^0.9.0",
    "@swc/cli": "^0.1.40",
    "@swc/core": "^1.2.57",
    "browserlist": "^1.0.1",
    "chokidar-cli": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.15",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "watch:ts": "spack && chokidar src/js/*.ts -c spack",
    "watch:11ty": "eleventy --serve",
    "build:ts": "spack",
    "build:11ty": "eleventy --output=build",
    "build:css": "postcss src/css/styles.css --no-map --dir build/css",
    "clean-build": "rimraf build",
    "dev": "NODE_ENV=dev npm-run-all -p watch:*",
    "build": "npm-run-all clean-build build:ts build:11ty -p minify:* build:css"
  },
  "browserslist": [
    "defaults"
  ]
}
